/*------------------------------------------------------------------------------------------------

  参考：http://jshint.com/docs/options/
  日本語解説：http://qiita.com/HieroglypH/items/3cb16ecff43b8e5f62e1

------------------------------------------------------------------------------------------------*/
{
  "strict"   : true, // "use strict" を強制
  "indent"   : 2, // インデントの深さ
  "maxlen"   : 100, // 一行の最大長
  "curly"    : true, // 波括弧の強制
  "quotmark" : "double", // ダブルクオテーションに統一
  "latedef"  : true, // 定義前変数の使用禁止
  "unused"   : "vars", // 使用していない変数を警告する
  "trailing" : true, // 行末の余分な空白を警告
  "eqeqeq"   : true, // 同値演算子=== !==に替えての等値演算子== !=の使用を禁止
  "undef"   : true,  // 宣言していない変数の使用禁止

  /*------------------------------------------------------------------
    グローバル変数へのアクセス管理
  ------------------------------------------------------------------*/
  "browser" : true, // ブラウザ用のグローバル変数を許可
  "node"    : true, // node用のグローバル変数を許可
  "jquery"  : true, // jQuery用のグローバル変数を許可
  "dojo"    : true, // dojo tool kit用のグローバル変数を許可
  "devel"   : true, //  consoleやalertを許可
  "debug"   : true  // debugger を許可
}